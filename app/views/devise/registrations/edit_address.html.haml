.mypage-main
  .mypage-wrapper
    = render "mypages/side_bar"
    .useredit
      %h2.useredit__title
        発送元・お届け先住所変更
      .useredit__main
        =form_with model: @address, url: users_edit_addresses_path, local: true do |f|
          .edit-address
            = f.label :"お名前(全角)"
            %span.profile-group__require 必須
            %br
            = f.text_field :address_family_name, {placeholder:" 例) 山田",class:'profile-group__input--left'}
            = f.text_field :address_first_name, {placeholder:" 例) フリ太郎",class:'profile-group__input--left'}
          .edit-address
            = f.label :"お名前カナ(全角)"
            %span.profile-group__require 必須
            %br
            = f.text_field :address_family_name_kana, {placeholder:" 例) ヤマダ",class:'profile-group__input--left'}
            = f.text_field :address_first_name_kana, {placeholder:" 例) フリタロウ",class:'profile-group__input--left'}
          .edit-address
            〒郵便番号
            %span.form-require 必須
            %br/
            = f.text_field :post_code, placeholder: ' 郵便番号'
          .edit-address
            都道府県
            %span.form-require 必須
            %br/
            = f.collection_select(:prefecture_id, Prefecture.all, :id, :prefecture,{include_blank: "都道府県を選択してください"}, { id: "address"} )
          .edit-address
            市区町村
            %span.form-require 必須
            %br/
            = f.text_field :city, placeholder: ' 市区町村'
          .edit-address
            番地
            %span.form-require 必須
            %br/
            = f.text_field :address_line, placeholder: ' 番地'
          .edit-address
            建物名
            %span.form-optional 任意
            %br/
            = f.text_field :building_name, placeholder: ' マンション名・ビル名'
          .edit-address
            連絡先
            %span.form-optional 任意
            %br/
            = f.text_field :phone, placeholder: ' 電話番号'
          .edit-address
            = f.submit '登録変更', class: "edit_address-btn"