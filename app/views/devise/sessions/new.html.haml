.sessions-new
  .sessions-new__wrapper
    .sessions-new__wrapper__registrations
      .sessions-new__wrapper__registrations__nav
        アカウントをお持ちでない方はこちら
      =link_to new_user_registration_path(current_user), class: "sessions-new__wrapper__registrations__button__sign" do
        .sessions-new__wrapper__registrations__button
          新規会員登録
    .sessions-new__wrapper__form
      = form_with model: @user, url: session_path(resource_name), local: true do |f|
        .field
          Email
          %br/
          = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'メールアドレス', class: "addless-box"
        .field.space
          Password
          %br/
          = f.password_field :password, autocomplete: "current-password", placeholder: 'パスワード', class: "pass-box"
        - if devise_mapping.rememberable?
          .sessions-new__wrapper__form 
        .actions--red
          = f.submit "ログイン", class:"login-btn"